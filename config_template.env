# ElectrumX Configuration Template
# Copy this file to .env or set these as environment variables

# Database settings
export DB_DIRECTORY="./electrumx_db"
export DB_ENGINE="leveldb"

# Coin settings (example for Bitcoin)
export COIN="Bitcoin"
export NET="mainnet"

# Bitcoin daemon connection (adjust for your setup)
export DAEMON_URL="http://username:password@localhost:8332/"

# Server settings
export SERVICES="tcp://:50001,ssl://:50002,rpc://127.0.0.1:8000"
export HOST=""
export ALLOW_ROOT="true"

# Performance settings
export CACHE_MB="2000"
export MAX_SESSIONS="10000"
export MAX_SEND="10000000"
export BANDWIDTH_UNIT_COST="50000"

# SSL settings (optional)
export SSL_CERTFILE=""
export SSL_KEYFILE=""

# Logging
export LOG_LEVEL="info"
export ANON_LOGS="false"
export LOG_SESSIONS="3600"

# Optional: Report services for public servers
# export REPORT_SERVICES="tcp://your-domain.com:50001,ssl://your-domain.com:50002"

# Optional: Donation address
# export DONATION_ADDRESS=""

# Optional: Banner files
# export BANNER_FILE=""
# export TOR_BANNER_FILE=""
